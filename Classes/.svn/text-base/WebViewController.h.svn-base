    UIButton *nextButton;
    UIButton *previousButton;
    
    UILabel *connectionWarning;
    
    LoaderViewController *loader;
    
    BOOL webViewLoaded;
    iDrupalAppDelegate* appDelegate;
}


@property (nonatomic, retain) IBOutlet UIWebView *webView;
