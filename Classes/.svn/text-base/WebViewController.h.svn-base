@property BOOL webViewLoaded;


// To be implemented by the subclass.
- (NSString *)webViewUrl;


- (NSString *)webViewNoConnection;

- (BOOL)adminButtonDisplay;

- (void)loadAddress:(NSString *)address;

- (IBAction)homeAction;
- (IBAction)nextAction;
- (IBAction)previousAction;
- (IBAction)adminAction;


@end
